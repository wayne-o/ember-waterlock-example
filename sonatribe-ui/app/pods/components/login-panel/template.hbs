{{yield}}
<div class="container">
  <div class="page-header">
    <h1>Login</h1>
  </div>

  {{#if session.isWorking}}
    One sec while we get you signed in...
  {{else}}

  <button {{action 'authenticateGoogle'}} class="btn btn-social google_oauth2">with Google</button>
      <button {{action 'authenticateFacebook'}} class="btn btn-social facebook_oauth2">with Facebook</button>
  {{/if}}

  <form {{action 'authenticate' on='submit'}}>
    <div class="form-group">
      <label for="identification">Login</label>
      {{input placeholder='Enter Login' class='form-control' value=identification}}
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      {{input placeholder='Enter Password' class='form-control' type='password' value=password}}
    </div>
    <button type="submit" class="btn btn-default">Login</button> or <button {{action 'toggleLogin'}} class="btn btn-default">Register</button>
  </form>
  {{#if errorMessage}}
    <div class="alert alert-danger">
      <strong>Login failed:</strong>{{errorMessage}}
    </div>
  {{/if}}
</div>
