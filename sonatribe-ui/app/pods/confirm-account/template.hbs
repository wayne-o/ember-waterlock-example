<form {{action 'completeRegistration' model on='submit' }}>
  <div class="form-group">
    <label for="login-account-password" class="control-label hide">Password</label>
    <div>
      {{input class="form-control" value=password placeholder="password" type="password" id="login-account-password" maxlength="200" capsLockOn=capsLockOn}}
    </div>
    {{#if minPassLength}}
      <p id="login-account-password-errors" class="errors text-danger">
        This password is invalid
      </p>
    {{/if}}
  </div>

  <div class="form-group">
    <p>
      {{#if showSpinner}}
        firing up the flux capacitor {{loading-spinner showSpinner }}
      {{else}}
        <button id="login-register" class="btn btn-large btn-primary" disabled= {{loginDisabled}} {{action "completeRegistration"}}>
          <i class="fa fa-lock"></i>&nbsp;create account
        </button>

      {{!--  {{#link-to 'login' class='btn btn-large btn-default' }}I have an account{{/link-to}}--}}

        <div style="padding-top:10px;">
        {{!--  {{#link-to 'forgot'}}forgot password?{{/link-to}}--}}
        </div>

        <div class=":caps-lock-warning capsLockOn::invisible"><i class="fa fa-exclamation-triangle"></i> caps lock warning</div>
      {{/if}}
    </p>
  </div>
</form>

{{outlet}}
